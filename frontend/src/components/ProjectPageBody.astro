<style>
    .images-container {
      width: 100%;
      padding: 80px 60px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin: 0 auto;
    }
  
    .item {
      border-radius: 12px;
      flex: calc(50% - 5px);
      height: 500px;
      background-color: #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  
    /* Cada tercer elemento ocupar√° 100% del ancho */
    .item:nth-child(3n) {
      flex: 100%;
    }
  </style>