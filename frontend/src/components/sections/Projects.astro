---
import PageSection from "../PageSection.astro"
import Project from "../Project.jsx"
import { loadTranslations } from "../../i18n";
import { getLocale } from "astro-i18n-aut";
import { removeAccents } from "../../utils/utils";
const locale = getLocale(Astro.url);
const translations = await loadTranslations(locale);
let convertedId = removeAccents(translations.sections.projects.containerId).toLowerCase().split(" ").join("-");

---


<PageSection fixedHeight={false} id={convertedId} flexConfig={{
    enable: true,
    direction: "column",
    justify: "center",
    align: "center",
    gap: "24px",
}} maxWidth="1680px">
    <h2 data-aos="zoom-out">{translations.sections.projects.title}</h2>
    <div id="project__header__label" data-aos="zoom-out"><span style="color: var(--secondary);">5</span> {translations.sections.projects.count.description}</div>
    <p data-aos="zoom-in">{translations.sections.projects.description}</p>
    <Project client:load projectTitle="Helios Plates, detector de placas con IA" projectDescription="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros." projectId={1} projectImage="https://via.placeholder.com/150" />
</PageSection>


<style>
    p {
        text-align: center;
        font-size: var(--font-size-description);
        color: var(--copy-light);
    }
    h2 {
        font-size: var(--font-size-title);
    }

    #project__header__label {
        padding: 6px 12px;
        background-color: var(--foreground);
        border: 2px solid var(--border);
        border-radius: 12px;
    }
    #project__header__label, #project__header__label span {
        font-size: var(--font-size-description);
    }
</style>