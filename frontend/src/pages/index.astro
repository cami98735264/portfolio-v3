---
import 'aos/dist/aos.css';
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import Navbar from "../components/Navbar.astro";
import navbarElements from "../utils/navbarElements";
import AboutMe from "../components/sections/AboutMe.astro";
---

<Layout>
	<Navbar navbarElements={navbarElements} />
	<AboutMe/>
</Layout>


<style is:global>
	.hero {
		padding: 72px;
		align-items: center;
		width: 100%;
		height: 600px;
		justify-content: space-between;
		display: flex;
	}

	.hero__content {
		flex: 0.5;
	}
	.hero__image img {
		border: 3px solid var(--primary);
		display: block;
		height: 100%;
		margin: 0 auto;
		border-radius: 12px;
	}
	.hero__image {
		height: 400px;
		display: block;
		flex: 0.5;
	}
	
</style>

<script>
	import AOS from "aos";
	AOS.init();
</script>